<%= form_for @book, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :author, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :genre, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :genre, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :year, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  books_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
